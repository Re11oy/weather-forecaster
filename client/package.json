{
  "name": "weather-forecast-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "run-prettier": "prettier 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "validate-prettiness": "yarn run-prettier -c",
    "make-prettier": "yarn run-prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "5.11.4",
    "@testing-library/react": "9.5.0",
    "@testing-library/user-event": "12.1.7",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scripts": "3.4.3"
  },
  "devDependencies": {
    "@types/jest": "26.0.14",
    "@types/node": "14.11.5",
    "@types/react": "16.9.51",
    "@types/react-dom": "16.9.8",
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2",
    "typescript": "4.0.3"
  }
}
